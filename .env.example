# InfoFlow Platform - Environment Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/infoflow
# For local development: DATABASE_URL=sqlite:///./infoflow.db

# API Keys for Content Fetchers

# X (Twitter) API
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret
X_BEARER_TOKEN=your_x_bearer_token

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=InfoFlow/0.1.0 by your_username

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email (via gog skill)
GOG_ACCOUNT=your@gmail.com

# Scheduler
FETCH_INTERVAL_MINUTES=240
BRIEF_GENERATION_HOUR=8
BRIEF_SEND_HOUR=8
BRIEF_SEND_MINUTE=30

# Scoring
HEAT_SCORE_WEIGHT=0.6
POTENTIAL_SCORE_WEIGHT=0.4

# Feature Flags
ENABLE_X_FETCHER=true
ENABLE_REDDIT_FETCHER=true
ENABLE_RSS_FETCHER=true
ENABLE_TELEGRAM_PUSH=true
ENABLE_EMAIL_PUSH=false
NEXUS_EMAIL_TO=recipient@example.com
